<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
<mapper namespace="kr.co.practice.board.notice.NoticeDAO">

	<select id="getList" parameterType="Pager" resultType="NoticeDTO">
		SELECT * FROM 
			(
				SELECT ROWNUM R, N.* FROM 
					(SELECT * FROM notice
						WHERE
							<choose>
								<when test="kind == 'title'">title</when>
								<when test="kind == 'writer'">writer</when>
								<!-- <when test="kind == 'contents'">contents</when> kind가 안들어올 경우 sql이 이상하게 완성됨 -->
								<otherwise>contents</otherwise>
							</choose>
							LIKE '%' || #{search} || '%'
					ORDER BY num DESC) N
			) WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<select id="getDetail" parameterType="BoardDTO" resultType="NoticeDTO">
		SELECT * FROM notice WHERE num = #{num}
	</select>
	
	<insert id="setAdd" parameterType="BoardDTO">
		INSERT INTO notice(title, contents, writer) VALUES(#{title}, #{contents}, #{writer})
	</insert>
	
	<update id="setUpdate" parameterType="BoardDTO">
		UPDATE notice SET title = #{title}, contents = #{contents} WHERE num = #{num}
	</update>
	
	<delete id="setDelete" parameterType="BoardDTO">
		DELETE FROM notice WHERE num = #{num}
	</delete>
	
	<select id="getCount" parameterType="Pager" resultType="Long">
		SELECT COUNT(num) FROM notice 
			WHERE
				<choose>
					<when test="kind == 'title'">title</when>
					<when test="kind == 'writer'">writer</when>
					<!-- <when test="kind == 'contents'">contents</when> kind가 안들어올 경우 sql이 이상하게 완성됨 -->
					<otherwise>contents</otherwise>
				</choose>
				LIKE '%' || #{search} || '%'
	</select>
	
</mapper>